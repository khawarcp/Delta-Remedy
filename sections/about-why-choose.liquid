<section class="about-why-choose">
  <div class="page-width">
    <h2> {{ section.settings.title }}  </h2>
    <div class="about-why-choose-flex">
      {% for block in section.blocks %}
      <div class="about-why-choose-col">
        <img src="{{ block.settings.image | img_url: 'original' }}">        
        <h4> {{ block.settings.heading }} </h4>
      </div>
      {% endfor %}
    </div>
  </div>
</section>


{% schema %}
  {
    "name": "Why Choose Delta",
    "settings": 
    [      
       {
         "type": "text",
         "id": "title",
         "label": "Title"
       }      
    ],
    "blocks":
    [
        {
            "type" : "Features",
            "name" : "Features",
            "settings":
            [
               {
                   "type": "text",
                   "id": "heading",
                   "label": "Heading"
               },
              {
                  "type": "image_picker",
                  "id": "image",
                  "label": "Image"
              }
             
            ]
        }
    ]
  }
{% endschema %}

