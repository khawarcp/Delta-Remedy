<section class="being-better">
  <div class="being-better-bg">
  <div class="page-width">
    <div class="being-better-row">
        <div class="story-teller-img">
          <img src="{{ section.settings.image | img_url : "master" }}" class="lazyload">
        </div>
        <div class="story-teller-text">
          <h2>{{ section.settings.heading }}</h2>
           <p>{{ section.settings.info_1 }}</p>
          {% if section.settings.button_text != blank %}
          <a class="btn" href="{{ section.settings.button_link }}" class="custom-site-btn custom-site-btn2 custom-site-btn3"><span>{{ section.settings.button_text }}</span></a>
          {% endif %}
        </div>
    </div>
  </div>
  </div>
</section>
{% schema %}
  {
    "name": "Being Better",
    "settings": 
	[
		{
			"type" : "text",
			"id" : "heading",
			"label" : "Heading"
		},
		{
			"type" : "textarea",
			"id" : "info_1",
			"label" : "Description"
		},
		{
			"type" : "image_picker",
			"id" : "image",
			"label" : "Image"
		},
		{
			"type" : "text",
			"id" : "button_text",
			"label" : "Button Text"
		},
		{
			"type" : "url",
			"id" : "button_link",
			"label" : "Link"
		}
	],
	"presets":
	[
		{
			"name" : "Being Better",
			"category" : "Custom Sections"
		} 
	]
  }
{% endschema %}

