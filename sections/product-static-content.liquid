
<section class="product-detail-accordion product-detail-loop">
  <div class="page-width">
    {% for block in section.blocks %}
        <div class="product-detail-accordion-flex">
          <div class="product-accordion-text-col">
            <h3> {{ block.settings.heading }} </h3>
            {{ block.settings.info }}
            <div class="product-accordion-detail">
              {% if block.settings.link != blank and block.settings.button_text != blank %}
              <a href="{{ block.settings.link }}" class="btn"><span>{{ block.settings.button_text }}</span></a>
              {% endif %}
            </div>
          </div>
          <div class="product-accordion-img-col">
            <img src="{{  block.settings.image | img_url: 'original' }}" class="lazyload" alt="{{ feature.settings.heading | escape | strip_html }}">
          </div>
          
        </div>
    {% endfor %}
  </div>
</section>


{% schema %}
    {
        "name": "Image With Text",
        "settings": [],
        "blocks":
        [
           {
               "type" : "Image-Text",
                "name" : "Image With Text",
               "settings": [
                    {
                        "type": "text",
                        "id": "heading",
                        "label": "Heading"
                    },
                  {
                      "type": "richtext",
                      "id": "info",
                      "label": "Description"
                  },
                  {
                      "type": "text",
                      "id": "button_text",
                      "label": "Button Text",
                      "default": "Read More"
                  },
                  {
                      "type": "url",
                      "id": "link",
                      "label": "Link"
                  },
                  {
                    "type": "image_picker",
                    "id": "image",
                    "label": "Image"
                  }
               ]
           }
        ]
    }
{% endschema %}
