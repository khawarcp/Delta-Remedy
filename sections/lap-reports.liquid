<section class="lab-report-sec">
    <div class="page-width">
      <h2> {{ page.title }} </h2>
      <div class="lab-report-flex">
        {% for block in section.blocks %}
            <div class="lab-report-col">
                <div class="lab-report-text">
                    <span class="lab-star"><img src="https://cdn.shopify.com/s/files/1/0631/1280/6647/files/lab-star.svg?v=1646811076"></span>
                    <span class="pdf-img"><img src="https://cdn.shopify.com/s/files/1/0631/1280/6647/files/pdf-img.png?v=1646811122"></span>
                    <h4> {{ block.settings.heading }} </h4>
                    <div class="batch-flex">
                        <h6>{{ block.settings.batch }}</h6>
                        <a href="#"><img src="https://cdn.shopify.com/s/files/1/0631/1280/6647/files/download-icon.svg?v=1646811154"></a>
                    </div>
                </div>
            </div>
        {% endfor %}
      </div>
    </div>
  </section>

  {% schema %}
  {
      "name" : "Lab Reports",
      "settings" : [],
      "blocks":
      [
        {
            "type" : "reports",
            "name" : "Lab Report",
            "settings":
            [
               {
                   "type": "text",
                   "id": "heading",
                   "label": "Heading",
                   "default": "30ML Full Spectrum Tincture Lab Reports"
               },
              {
                  "type": "text",
                  "id": "batch",
                  "label": "Batch",
                  "default": "Batch ID 9052099"
              },
             {
                 "type": "text",
                 "id": "file_url",
                 "label": "File URL",                 
                 "info": "Upload the File in the Settings Files and Paste the URL/Link in the field."
             }
            ]
        }
      ]
  }
  {% endschema %}